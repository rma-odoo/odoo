<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_editor" inherit_id="website.assets_editor" name="Twitter wall Editor">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_twitter_wall/static/src/js/website_twitter_wall.editor.js"></script>
            </xpath>
        </template>
        
        <template id="twitter_wall_footer_custom" inherit_id="website.footer_default" name="Footer Twitter Wall Link">
            <xpath expr="//div[@id='info']/ul" position="inside">
                <li><a href="/twitter_walls">Twitter Wall</a></li>
            </xpath>
        </template>
        
        <!-- Page -->
        <template id="twitter_walls">
            <t t-call="website.layout">
                <t t-set="head">
                    <link rel="stylesheet"
                        href="/website_twitter_wall/static/src/css/website_twitter_wall.css"
                        type="text/css" />
                    <script type="text/javascript"
                        src="/website_twitter_wall/static/src/js/website_twitter_wall.js"></script>
                </t>
                
                <div class="container">
                    <!-- <div class="alert alert-danger alert-dismissible" role="alert" t-if="not api_conf">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">x</span><span class="sr-only">Close</span></button>
                        <strong>Error!</strong> Contact System Administration for Configure Twitter API KEY and ACCESS TOKEN.
                        <a class="lnk_configure" href="/web#action=website.action_website_configuration">Click Here</a>
                    </div> -->
                    <div class="modal fade" id="APIConf" t-if="not api_conf">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header alert alert-danger">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span></button>
                            <h4 class="modal-title" id="myModalLabel">Error Configuration!</h4>
                          </div>
                          <div class="modal-body">
                            <strong>Error!</strong> Contact System Administration for Configure Twitter API KEY and ACCESS TOKEN.
                            <a class="lnk_configure" href="/web#action=website.action_website_configuration">Click Here</a>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="text-center text-muted" t-if="not walls">
                        <h1>No Twitter Wall found</h1>
                    </div>

                    <div class="row">
                        <div class="container-fluid">
                            <div class="row" t-if="walls">
                                <t t-foreach="walls" t-as="wall">
                                    <div class="modal fade" id="APIConf" t-if="not api_token_conf">
                                      <div class="modal-dialog">
                                        <div class="modal-content">
                                          <div class="modal-header alert alert-warning">
                                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Authorize Required!</h4>
                                          </div>
                                          <div class="modal-body">
                                            <strong>Warning!</strong> Authorize the account for start streaming.
                                            <a t-attf-href="/twitter_wall/#{ slug(wall) }/authenticate">Click Here</a>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                    
                                    <!-- <t t-set="class1"
                                        t-value="'published_True' if wall.website_published else 'published_False' " /> -->
                                    <div class="wall_box" name="tweets_for_admin" t-att-wall_id="wall.id">
                                        <div class="row-fulid">
                                            <div class="col-md-1 pull-right oe_auto_hide">
                                                <!-- <a t-if="uid" href="#">
                                                    <span class="glyphicon glyphicon-download"></span>
                                                </a> -->
                                                
                                                <div class="dropdown">
                                                  <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-download"></span></a>
                                                  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                    <li><a href="#">Edit</a></li>
                                                      <li><a t-attf-href="/twitter_wall/#{ slug(wall) }/delete">Delete</a></li>
                                                      <li><a t-attf-href="/twitter_wall/#{ slug(wall) }/approved">Display Tweet<span class="badge badgespace"><t t-esc="status[wall.id][0]"/></span></a></li>
                                                  </ul>
                                                </div>
                                                
                                                <!-- <ul class="kanban_dropdown oe_padding">
                                                  <li><span class="glyphicon glyphicon-download"></span>
                                                    <ul>
                                                      <li><a href="#">Edit</a></li>
                                                      <li><a t-attf-href="/twitter_wall/#{ slug(wall) }/delete">Delete</a></li>
                                                      <li><a t-attf-href="/twitter_wall/#{ slug(wall) }/approved">Display Tweet<span class="badge badgespace"><t t-esc="status[wall.id][0]"/></span></a></li>
                                                    </ul>
                                                  </li>
                                                </ul> -->
                                            </div>
                                            <!-- <div class="col-md-2 oe_padding">
                                                <img class="img-rounded oe_wall_image" t-att-src="'/website/image?model=website.twitter.wall&amp;field=back_image&amp;id='+str(wall.id)"></img>
                                            </div> -->
                                            
                                            <div class="btn-group pull-right">
                                                <t t-if="wall.state == 'not_streaming'">
                                                    <button type="submit"
                                                        class="btn btn-success navbar-btn start_streaming"
                                                        t-att-wall_id="wall.id" value="startstreaming"><i class="fa fa-refresh"></i></button>
                                                </t>
                                                <t t-if="not wall.state == 'not_streaming'">
                                                    <button type="submit"
                                                        class="btn btn-danger navbar-btn stop_streaming"
                                                        t-att-wall_id="wall.id" value="stopstreaming"><i class="fa fa-refresh"></i></button>
                                                </t>
                                            </div>
                                            
                                            <div class="col-md-8 oe_padding">
                                                <h2 class="oe_margin">
                                                    <a itemprop="url" t-att-class="wall.website_published"
                                                        t-attf-href="/twitter_wall/#{ slug(wall) }">
                                                        <span t-esc="wall.name"></span>
                                                    </a>
                                                </h2>
                                                <div t-if="wall.screen_name" class="clearfloat">
                                                    <span t-foreach="wall.screen_name" t-as="screen_name" class="tagcloud">
                                                    @ <t t-esc="screen_name.name" />
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clearfloat"><br /></div>
                                        <div class="row-fulid oe_description">
                                            <p><t t-esc="wall.note" /></p>
                                        </div>
                                        <div class="clearfloat"><br /></div>
                                        <!-- <div class="wall_tweet_count clearfloat">
                                            <ul class="nav nav-pills">
                                              <li class="state_count">Pending <span class="badge badgespace"><t t-esc="status[wall.id][0]"/></span></li>
                                              <li class="state_count"><a t-attf-href="/twitter_wall/#{ slug(wall) }/approved" class="state_link">Aprove <span class="badge badgespace"><t t-esc="status[wall.id][1]"/></span></a></li>
                                              <li class="state_count">Rejected<span class="badge badgespace"><t t-esc="status[wall.id][2]"/></span></li>
                                            </ul>
                                        </div> -->
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="twitter_wall_approve" name="Twitter Wall Approve Tweet">
            <t t-call="website.layout">
                <t t-set="head">
                    <script type="text/javascript">
                        openerp.qweb.add_template('/website_twitter_wall/static/src/xml/website_twitter_wall.xml');
                    </script>
                    <link rel="stylesheet"
                        href="/website_twitter_wall/static/src/css/website_twitter_wall.css"
                        type="text/css" />
                    <script type="text/javascript"
                        src="/website_twitter_wall/static/src/js/website_twitter_wall.js"></script>
                </t>
                <div name="tweets_for_approve" t-att-wall_id="wall.id">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-10" id="approve_tweet_wall" t-att-view_mode="wall.view_mode">

                            </div>
                            <div class="col-sm-2 pull-right">
                                <div class="pos_fix">
                                    <h3>
                                        Tweet us :<br />
                                        <t t-foreach="wall.tags" t-as="tag">
                                            <label class="label label-danger"><t t-esc="tag.name" /></label>
                                        </t>
                                    </h3> &amp;nbsp;
                                    Twitter wall powered by Odoo.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="twitter_wall" name="Twitter Wall Tweet">
            <t t-call="website.layout">
                <t t-set="head">
                    <script type="text/javascript">
                        openerp.qweb.add_template('/website_twitter_wall/static/src/xml/website_twitter_wall.xml');
                    </script>
                    <link rel="stylesheet"
                        href="/website_twitter_wall/static/src/css/website_twitter_wall.css"
                        type="text/css" />
                    <script type="text/javascript"
                        src="/website_twitter_wall/static/src/js/website_twitter_wall.js"></script>
                </t>
                <div class="full_screen" name="tweets_for_client"
                    t-attf-style="background-image: url('data:image/jpg;base64, #{back_image}')">
                    <div class="container" t-att-wall_id="wall_id">
                        <div class="col-md-offset-11 pull-right">
                            <form method="POST" action="/twitter_wall/upload_image"
                                enctype="multipart/form-data" class="form-inline" id="back_img">
                                <div class="form-group pull-left oe_auto_hide">
                                    <input t-if="uid" type="file" name="upload" data-type="wall"
                                        t-att-data-id="wall_id" class="upload_bg_image" accept="image/*"
                                        style="position: absolute; opacity: 0; width: 1px; height: 1px;" />
                                    <a t-if="uid" href="#">
                                        <span class="glyphicon glyphicon-upload upload_img"></span>
                                    </a>
                                    <a href="#" id="max_window">
                                        <span class="glyphicon glyphicon-fullscreen"></span>
                                    </a>
                                </div>
                            </form>
                        </div>
                        <div class="row">
                            <div class="col-sm-10" id="tweet_wall_div" t-att-view_mode="view_mode">

                            </div>
                            <div class="col-sm-2 pull-right">
                                <h3>
                                    Tweet us :
                                    <label class="label label-danger"># opendays</label>
                                </h3>
                                Twitter wall powered by Odoo.
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Website menu -->
        <!-- <record id="website_menu" model="website.menu">
            <field name="name">Twitter Walls</field>
            <field name="url">/twitter_walls</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">25</field>
        </record> -->
        
        <template id="tweet_modetate">
            <t t-call="website.layout">
                <t t-set="head">
                    <script type="text/javascript">
                        openerp.qweb.add_template('/website_twitter_wall/static/src/xml/website_twitter_wall.xml');
                    </script>
                    <link rel="stylesheet"
                        href="/website_twitter_wall/static/src/css/website_twitter_wall.css"
                        type="text/css" />
                    <script type="text/javascript"
                        src="/website_twitter_wall/static/src/js/website_twitter_wall.js"></script>
                </t>
                <div class="container">
                    <div class="twitter_moderate_container" t-att-wall_id="wall.id"
                        name="tweets_for_admin">
                        <nav class="navbar navbar-default" role="navigation">
                            <div class="container-fluid">

                                <div class="navbar-header">
                                    <a class="navbar-brand" href="#">
                                        <t t-esc="wall.name" />
                                    </a>
                                </div>

                                <div class="collapse navbar-collapse" id="wall-navbar-collapse-1">
                                    <!--div t-if="wall.tags">
                                        <ul class="nav navbar-nav" t-foreach="wall.tags" t-as="tag">
                                            <li>
                                                <a href="#">
                                                    #
                                                    <t t-esc="tag.name" />
                                                </a>
                                            </li>
                                        </ul>
                                    </div-->

                                    <!--form class="navbar-form navbar-right">
                                        <input type="text" class="form-control" placeholder="Quick filter" />
                                        <button type="submit" class="btn btn-default">Search</button>
                    </form-->
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Filters <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Pending</a></li>
                                <li><a href="#">Scheduled</a></li>
                                <li><a href="#">Published</a></li>
                                <li><a href="#">Unpublished</a></li>
                            </ul>
                        </li>
                    </ul>
                    
                    <form method="POST" action="/twitter_wall/upload_image"
                        enctype="multipart/form-data" class="form-inline" id="back_img">
                        <div class="form-group pull-left">
                            <input type="file" name="upload" data-type="tweet"
                                t-att-data-id="wall.id"
                                class="upload_bg_image" accept="image/*"
                                style="position: absolute; opacity: 0; width: 1px; height: 1px;" />
                        </div>
                    </form>

                    <div class="btn-group" data-toggle="buttons">
                        <t t-set="list_mode" t-value="'active' if wall.view_mode == 'list_mode' else ''" />
                        <label t-attf-class="control-label btn btn-sm btn-default navbar-btn #{list_mode}">
                            <input type="radio" name="view_mode" value="list_mode" /> 
                            <strong>List Mode</strong>
                        </label>
                        <t t-set="box_mode" t-value="'active' if wall.view_mode == 'box_mode' else ''" />
                        <label id="box_id" t-attf-class="control-label btn btn-sm btn-default navbar-btn #{box_mode}">
                            <input type="radio" name="view_mode" value="box_mode" />
                            <strong>Box Mode</strong>
                        </label>
                    </div>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#" class="upload_img"><i class="fa fa-upload"></i> Background</a></li>
                    
                        <li>
                            <form class="navbar-form">
                                <input type="text" class="form-control" placeholder="odooapps or opendays" />
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Search</button>
                            </form>
                        </li>
                    
                        <li>
                            <div class="btn-group">
                                <t t-if="wall.state == 'not_streaming'">
                                    <button type="submit"
                                        class="btn btn-success navbar-btn start_streaming"
                                        t-att-wall_id="wall.id" value="startstreaming"><i class="fa fa-refresh"></i></button>
                                </t>
                                <t t-if="not wall.state == 'not_streaming'">
                                    <button type="submit"
                                        class="btn btn-danger navbar-btn stop_streaming"
                                        t-att-wall_id="wall.id" value="stopstreaming"><i class="fa fa-refresh"></i></button>
                                </t>
                            </div>
                        </li>
                    </ul>
                                </div>
                            </div>
                        </nav>

                        <div>
                            <div class="stream-item alert alert-success sr-only pointer">
                                <span>
                                    <strong></strong>
                                </span>
                            </div>
                        </div>

                        <!--ul class="nav nav-tabs" id="status">
                            <t t-foreach="states" t-as="state">
                                <li t-att-id="state[0]">
                                    <a href="#">
                                        <span t-att-value="state[0]">
                                            <t t-esc="state[1]" />
                                        </span>
                                    </a>
                                </li>
                            </t>
                        </ul-->
                        
                        <t t-foreach="states" t-as="state">
                            <table class="table table-condensed table-hover table-responsive" id="tweet_table"
                                t-att-name="state[0]">
                                <tr>
                                    <th></th>
                                    <th class="col-sm-2">Author</th>
                                    <th class="col-sm-8">Tweet</th>
                                    <!--th class="col-sm-1">URL</th-->
                                    <th>Media</th>
                                    <th>Moderation</th>
                                    <!--th>Image</th-->
                                </tr>
                            </table>
                        </t>

                        <div class="load_more_tweet alert alert-info pointer">
                            <strong class="glyphicon glyphicon-chevron-down"></strong>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
