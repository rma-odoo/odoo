     </t>
     
     <t t-name="twitter_load_tweets">
     </t>
     
     <t t-name="twitter_moderate_tweets">
       <tr data-type="tweet" t-att-data-id="tweet.id" t-att-class="color_class">
        <td>
            <img t-attf-src="#{tweet.user_image_url}" alt="Media Thumbnail"  width="42" height="42"/>
        </td>
        <td>
            <t t-esc="tweet.name" />
        </td>
        <td>
            <t t-esc="tweet.description" />
        </td>
        <td>
            <t t-if="tweet.urls" t-foreach="tweet.urls" t-as="url">
                <a t-attf-href="#{url}" target="_blank">
                    <button type="submit" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-globe" /></button>
                </a>
            </t>
        </td>
        <td>
            <t t-if="tweet.media">
                <img t-attf-src="#{tweet.media}" width="45" height="45" alt="Tweet Link" class="media_thumb" />
                <img t-attf-src="#{tweet.media}" alt="Original Media Thumbnail" class="media_inlarge"/>
            </t>
        </td>
        <td>
            <button type="submit" class="btn btn-default btn-sm rowremove" value="published"><i class="glyphicon glyphicon-ok" /></button>
            <button type="submit" class="btn btn-default btn-sm rowremove" value="unpublished"><i class="glyphicon glyphicon-remove" /></button>
        </td>
        <td>
            <img class="upload_img media_thumb pointer" t-att-src="'/website/image?model=website.twitter.wall.tweet&amp;field=back_image&amp;id='+tweet.id" width="42" height="42"/>
        </td>
       </tr>
     </t>
</template>
