<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_voucher_document">
    <t t-call="report.external_layout">
        <div class="page">
            <t t-foreach="docs" t-as="o">
                <div class="row mb32">
                    <div class="col-xs-6 col-xs-offset-3">
                     <center>
                        <h2><t t-esc="get_title(o.type)"/></h2>
                        <h5><address t-field="o.company_id.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' /></h5>
                            <h5><t t-esc="o.company_id.rml_footer"/></h5>
                        </center>
                    </div>
                </div>
                <table class="table table-bordered">
                    <tr>
                        <td class="col-md-4" colspan="2"> <strong>Journal:</strong></td>
                        <td class="col-md-8" colspan="2"><span t-field="o.type"/></td>
                        <td class="col-md-4" colspan="2"> <strong>Number:</strong></td>
                        <td class="col-md-8" colspan="2"><span t-field="o.number"/></td>
                    </tr>
                    <tr>
                        <td class="col-md-2"> <strong>Status:</strong></td>
                        <td class="col-md-2">
                            <span t-if="o.state == 'proforma'">PRO-FORMA</span>
                            <span t-if="o.state == 'draft'">Draft</span>
                            <span t-if="o.state == 'cancel'">Canceled</span>
                            <span t-if="o.state == 'posted'">Posted</span>
                        </td>
                        <td class="col-md-2"> <strong>Ref.:</strong></td>
                        <td class="col-md-2"><span t-field="o.reference"/></td>
                        <td class="col-md-2"  colspan="2"> <strong>Date:</strong></td>
                        <td class="col-md-4"  colspan="2"><span t-field="o.date"/></td>
                    </tr>
                </table>
                <table>
                    <thead class="table-bordered">
                        <tr>
                            <th class="col-xs-10 col-sm-3"><h4><b>Particulars</b></h4></th>
                            <th class="col-xs-6 col-sm-3"><h4><b>Debit</b></h4></th>
                            <th class="col-xs-6 col-sm-3"><h4><b>Credit</b></h4></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.move_ids" t-as="m">
                            <tr>
                                <td class="col-md-8"><t t-if="m.partner_id or 'Account'">
                                    <h4><b><t t-esc="m.partner_id.name"/></b></h4></t>
                                </td>
                                <td class="col-md-4"><p t-field="m.debit"/></td>
                                <td class="col-md-4"><p t-field="m.credit"/></td>
                            </tr>
                            <tr class="mt32">
                                <td class="col-md-8"><span t-field="m.account_id.name"/> </td>
                            </tr>
                            <tr class="mt32">
                                <td class="col-md-8">
                                    <t t-esc="m.name"/> - <t t-esc="get_ref(o.id,m)"/>
                                </td>
                            </tr>
                        </tr>
                        <tr>
                            <td class="col-md-8 mt32"><h4><b>Through: </b></h4><h5><t t-esc=" o.narration"/></h5></td>
                        </tr>
                        <tr>
                            <td class="col-md-8"><h4><b> On Account of: </b></h4><h5><t t-esc=" o.name"/></h5></td>
                        </tr>
                        <tr>
                            <td class="col-md-8">
                                <h4><b>Amount (in words) :</b></h4>
                                <t t-if="o.state != 'draft' and o.state != 'cancel'">
                                    <h5><t t-esc="convert(o.amount,o.currency_id.name)"/></h5>
                                </t>
                            </td>
                        </tr>
                        <tr class="table-bordered">
                            <td class="col-md-4"></td>
                            <td class="col-md-4"><h4><b> <t t-esc="debit(o.move_ids)"/></b></h4></td>
                            <td class="col-md-4"><h4><b> <t t-esc="credit(o.move_ids)"/></b></h4></td>
                            <td class="col-md-4"></td>
                        </tr>
                    </tbody>
                </table>
                <div class="row mt64 mb64">
                    <b class="text-left" style="margin-left:3%">Receiver's Signature</b>
                    <b class="text-right pull-right" style="margin-right:5%">Authorised Signature</b>
                </div>
            </t>
        </div>
    </t>
</template>
<template id="report_voucher">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'l10n_in_account_voucher.report_voucher_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
